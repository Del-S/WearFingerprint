<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="buttonStyle">@style/DefaultButton</item>
        <item name="android:windowBackground">@color/colorBackground</item>
    </style>

    <style name="DarkAlertDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:alertDialogStyle">@style/AlertDialogInnerBackground</item>
        <item name="android:windowMinWidthMajor">@dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@dimen/dialog_min_width_minor</item>
    </style>

    <style name="AlertDialogInnerBackground">
        <item name="android:bottomBright">@color/colorDialogBackground</item>
        <item name="android:bottomDark">@color/colorDialogBackground</item>
        <item name="android:bottomMedium">@color/colorDialogBackground</item>
        <item name="android:centerBright">@color/colorDialogBackground</item>
        <item name="android:centerDark">@color/colorDialogBackground</item>
        <item name="android:centerMedium">@color/colorDialogBackground</item>
        <item name="android:fullBright">@color/colorDialogBackground</item>
        <item name="android:fullDark">@color/colorDialogBackground</item>
        <item name="android:topBright">@color/colorDialogBackground</item>
        <item name="android:topDark">@color/colorDialogBackground</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DefaultButton" parent="Widget.AppCompat.Button">
        <item name="android:colorButtonNormal">@drawable/button_default</item>
    </style>

</resources>
